#!/usr/local/bin/bash

col1=$(tput setaf 1)
col2=$(tput setaf 2)
col3=$(tput setaf 3)
col4=$(tput setaf 6)
col5=$(tput setaf 5)
norm=$(tput sgr0)

# edit this line
cachefile='/usr/local/share/cache'

printf "$col1 Hostnames for $HOSTNAME:\n"

while read ip host
do
((++i == 1)) && max="$ip" && continue
host=${host%.}
printf "$col2%-*s $col3= $col4$host$norm\n" "$max" "$ip"
done < "$cachefile"
